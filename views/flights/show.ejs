<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <section>
    <div>Airline: </div>
		<div>
      <%= flight.airline %> 
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight No.: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure.: </div>
    <div><%= flight.departs.toDateString() %></div>
  </section>


  <h2>Add Ticket:</h2>
  <form id="add-review-form" action="/flights/<%= flight._id %>/tickets" method="POST">
    <label for="content-textarea">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label for="rating-select">Price:</label>
    <input name="price">
    <button type="submit">Add Ticket</button>
  </form>
  
  <% if (flight.tickets.length) { %>
    <h2> Tickets </h2>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td><form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
              <button>X</button>
            </form></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
	<% } %>
</main>

<%- include("../partials/footer") %>