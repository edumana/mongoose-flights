<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline">Airline:</label>
    <select name="airline" id="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
      <option value="PanAm">PanAm</option>
    </select>
    <label for="airport">Airport:</label>
    <select name="airport" id="airport">
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="ZHR">ZHR</option>
    </select>    
    <label for="flight-no">Flight #:</label>
    <input type="text" name="flightNo" id="flight-no" placeholder="10-9999">
    <label for="departs">Departure:</label>
    <input type="date" name="departs" id="departs">
    <button type="submit">Add Flight</button>
  </form>
</main>
<%- include("../partials/footer") %>