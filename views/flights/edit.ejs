<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav')  %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline">Airline:</label>
    <select name="airline" id="airline">
      <option value="<%= flight.airline %>"><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
      <option value="PanAm">PanAm</option>
    </select>
    <label for="airport">Airport:</label>
    <select name="airport" id="airport">
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="ZHR">ZHR</option>
    </select>    
    <label for="flight-no">Flight #:</label>
    <input type="text" name="flightNo" id="flight-no" value="<%= flight.flightNo %>">
    <label for="departs">Departure:</label>
    <input type="date" name="departs" id="departs" value= <%= flight.departs.toISOString().slice(0, 10) %> >
    <button type="submit">Save Updates</button>
  </form>
</main>

<%- include('../partials/footer')  %> 